        //             title={repo.name}
        //             body={repo.description}
        //             src={repo.owner.avatar_url}
        //         />
        //     )
        // })
        repos.filter((repo: any) => repo.stargazers_count > 0).map((repo: any) => {
            return (
                <Card
                    href={repo.html_url}
                    title={repo.name}
                    body={repo.description}
                    src={repo.owner.avatar_url}
                />
            )
        })
    }
</ul>