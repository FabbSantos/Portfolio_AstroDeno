---
import { apiGit } from '../api/resources'
import Card from '../components/Card.astro';


const repos = await apiGit();
---

<ul role="list" class="link-card-grid">
    {
        repos.map((resource: any) => {
            return (
                <Card
                    href={resource.html_url}
                    title={resource.name}
                    body={resource.description}
                    src={resource.owner.avatar_url}
                />
            )
        })
    }
</ul>