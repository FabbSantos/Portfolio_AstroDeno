<style>

.white-gradient {
  background: linear-gradient(to right, rgba(255,  255,  255,  1)  0%, rgba(255,  255,  255,  0)  100%);
}



/* Styling */
.slider {
  box-shadow:  0  10px  20px -5px rgba(0,  0,  0, .125);
  height:  100px;
  margin-inline: auto;
  overflow: hidden;
  position: relative;
  max-width:  1300px;
}

.slider::before,
.slider::after {
  content: "";
  height:  100px;
  position: absolute;
  width:  200px;
  z-index:  2;
  background: linear-gradient(to right, rgba(0,  0,  0,  1)  0%, rgba(0,  0,  0,  0)  100%);
}

.slider::after {
  right:  0;
  top:  0;
  transform: rotateZ(180deg);
}

.slider::before {
  left:  0;
  top:  0;
}

.slider .slide-track {
--numberOfSlides: 14; 
  animation: scroll  40s linear infinite;
  display: flex;
  gap: 1%;
  width: calc(450px *  var(--numberOfSlides));
}
@media  (max-width:768px) {
    .slider .slide-track {
        --numberOfSlides: 5; 
    }
}

.slider .slide {
  height:  100px;
    @apply max-w-[130px] md:max-w-[80%] lg:max-w-[100%];
}


@keyframes scroll {
   0% {
    transform: translateX(0);
  }
   100% {
    transform: translateX(calc(-250px *  7));
  }
}
</style>
