---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio Page of FabrÃ­cio Bahiense, a web / front-end developer, designer and" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		
		--bright-pink: #FF5964;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	* {
		transition: all .2s ease-in-out;
	}
	html {
		font-family: "Work Sans", Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Ubuntu, sans-serif;
		letter-spacing: -1px;
		line-height: 48px;
		font-weight: normal;
		background: #000;
		color: white;
		background-size: 224px;
		scroll-behavior: smooth;
	}

	a:hover, a:focus-within, a:focus {
		color: var(--bright-pink);
	}
	a > svg:hover path {
		fill: var(--bright-pink);
	}
	a > svg:hover {
  		transform: scale(1.07);
	}
	 .fade-text {
        color: rgba(227, 228, 230, .55);
    }
	h1, h2{
		font-size: clamp(1.5rem, 8vw, 3rem);
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.glassy {
		--dot-bg: black;
		--dot-color: rgba(255, 255, 255, 0.9);
		--dot-size: 1px;
		--dot-space: 22px;
		background:
			linear-gradient(90deg, var(--dot-bg) calc(var(--dot-space) - var(--dot-size)), transparent 1%) center / var(--dot-space) var(--dot-space),
			linear-gradient(var(--dot-bg) calc(var(--dot-space) - var(--dot-size)), transparent 1%) center / var(--dot-space) var(--dot-space),
			var(--dot-color);
	}

</style>
